{
  "expo": {
    "name": "AI Production Monitor",
    "slug": "ai-production-monitor",
    "version": "0.1.0",
    "sdkVersion": "54.0.0",
    "platforms": ["ios", "android", "web"],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "aimobileapp",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.automationintellect.aiproductionmonitor",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Allow the app to capture photos for uploaded actions.",
        "NSPhotoLibraryUsageDescription": "Allow the app to pick images from your library for uploaded actions.",
        "NSPhotoLibraryAddUsageDescription": "Allow the app to save captured photos to your library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.automationintellect.aiproductionmonitor",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": ["expo-secure-store", "expo-image-picker"],
    "extra": {
      "eas": {
        "projectId": "c8a91170-3131-42db-ac96-ea600a7a48fd"
      }
    }
  }
}
